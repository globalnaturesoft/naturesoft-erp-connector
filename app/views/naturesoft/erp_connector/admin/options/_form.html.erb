<div class="panel panel-flat">
  <div class="panel-body">
    <%= form_for([naturesoft, :admin, Naturesoft::Option.new], html: {}) do |f| %>
      <h4 class="text-semibold">ERP connector settings</h4>
      <div class="row">
        <div class="col-sm-12 col-md-12">
          <div class="form-group">
            <label class="control-label" ><%= t(:url) %> <span class='text-danger'>*</span></label>
            <div class="">
              <%= text_field_tag "options[erp_connector][erp_product_url]", @options["erp_connector"]["erp_product_url"], class: "form-control" %>
            </div>
          </div>          
        </div>
      </div>      
    
      <div class="text-right">
        <%= button_tag "#{t(:save)}<i class=\"icon-check position-right\"></i>".html_safe, class: "btn btn-primary"%>
      </div>
        
    <% end %>
  </div>
</div>